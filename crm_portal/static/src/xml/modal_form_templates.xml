<?xml version="1.0" encoding="UTF-8"?>
<templates id="modal_form_templates" xml:space="preserve">
    <t t-name="owl.ModalFormTemplate" owl="1">
        <div class="form-popup-bg" t-att-style="state.isVisible ? 'display: flex;' : 'display: none;'" t-on-click="onOutsideClick">
            <div class="form-container">
                <button id="btnCloseForm" class="close-button" t-on-click="closeModal">X</button>
                <h1>Contact Us</h1>
                <p>For more information, please complete this form.</p>
                <form action="/submit-form" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input id="name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="company">Company Name</label>
                        <input id="company" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        <label for="email">E-Mail Address</label>
                        <input id="email" class="form-control" type="email" />
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input id="phone" class="form-control" type="tel" pattern="[0-9]{10}" />
                    </div>
                    <button type="submit" class="submit-button">Submit</button>
                </form>
            </div>
        </div>
        <button id="btnOpenForm" class="open-button" t-on-click="openModal">Open Form</button>
    </t>
</templates>
