<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_my_crm" name="Lead / CRM" customize_show="True" inherit_id="portal.portal_my_home"
              priority="70">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <t t-set="portal_service_category_enable" t-value="True"/>
        </xpath>
        <xpath expr="//div[@id='portal_service_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'crm_portal/static/img/crm.svg'"/>
                <t t-set="title">CRM</t>
                <t t-set="url" t-value="'/my/crm'"/>
                <t t-set="text">Follow the evolution of your projects</t>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>

    <template inherit_id="portal.portal_breadcrumbs" id="crm_portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'crm_list_view'" class="breadcrumb-item">CRM</li>
            <li t-if="page_name == 'crm_form_view'" class="breadcrumb-item">
                <a t-attf-href="/my/crm">CRM</a>
                <span t-esc="' / ' + crm_id.name"/>
            </li>
        </xpath>
    </template>

    <template id="my_crm_portal">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">CRM</t>
            </t>
            <t t-if="not crm_datas">
                <p class="alert alert-warning">There are currently no CRM.</p>
            </t>
            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-left">Opportunity</th>
                        <th class="text-left">Contact Name</th>
                        <th class="text-left">Email</th>
                        <th class="text-left">Salesperson</th>
                        <th class="text-left">Expected Revenue</th>
                        <th class="text-left">Stage</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="crm_datas" t-as="data">
                        <tr>
                            <td class="text-left">
                                <a t-attf-href="/my/crm/#{data.id}">
                                    <t t-out="data.name"/>
                                </a>

                            </td>
                            <td class="text-left">
                                <t t-out="data.contact_name"/>
                            </td>
                            <td class="text-left">
                                <t t-out="data.email_from"/>
                            </td>
                            <td class="text-left">
                                <t t-if="data.user_id.image_1920">
                                    <img t-attf-src="data:image/png;base64,{{data.user_id.image_1920}}" alt="avatar"
                                         class="rounded-circle img-fluid"
                                         style="width:30px;height:30px;"/>
                                </t>
                                <t t-else="">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                                         alt="avatar"
                                         class="rounded-circle img-fluid" style="width:30px;height:30px;"/>
                                </t>
                                <t t-out="data.user_id.name"/>
                            </td>
                            <td class="text-left">
                                <t t-out="data.expected_revenue"/>
                            </td>
                            <td class="text-left">
                                <t t-out="data.stage_id.name"/>
                            </td>
                        </tr>

                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="my_crm_portal_form_view" inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'crm_form_view'">
                <section>
                    <div class="container">
                        <div class="col">
                            <div class="row-3 d-flex justify-content-between align-items-center px-2 py-1"
                                 style="border-bottom: 1px solid #cecece; background-color: #f9f9f9;">
                                <div>
                                    <h3>
                                        <t t-out="crm_id.name"/>
                                    </h3>
                                </div>
                                <div>
                                    <t t-set="stars" t-value="int(crm_id.priority) if crm_id.priority else 0"/>
                                    <t t-foreach="range(stars)" t-as="star">
                                        <i class="fa fa-star" style="color: #FFD700;"></i> <!-- Filled star -->
                                    </t>
                                    <t t-foreach="range(3 - stars)" t-as="star">
                                        <i class="fa fa-star-o" style="color: #FFD700;"></i> <!-- Empty star -->
                                    </t>
                                </div>
                            </div>
                            <div class="row-9 pt-3 d-flex justify-content-between">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col">
                                            <strong>Customer</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.partner_name" t-out="crm_id.partner_name"/>
                                            <p class="p-0 m-0 d-flex align-items-center text-left" t-if="crm_id.phone">
                                                <i class="fa fa-phone" style="margin-right: 5px;"/>
                                                <t t-out="crm_id.phone"/>
                                            </p>
                                            <p class="p-0 m-0 d-flex align-items-center text-left" t-if="crm_id.mobile">
                                                <i class="fa fa-mobile" style="margin-right: 10px;"/>
                                                <t t-out="crm_id.mobile"/>
                                            </p>
                                            <p class="p-0 m-0 d-flex align-items-center text-left"
                                               t-if="crm_id.email_from">
                                                <i class="fa fa-envelope" style="margin-right: 5px;"/>
                                                <t t-out="crm_id.email_from"/>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col">
                                            <strong>Address</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.street" t-out="crm_id.street"/>
                                            <p class="p-0 m-0" t-if="crm_id.street2" t-out="crm_id.street2"/>
                                            <p class="p-0 m-0">
                                                <t t-if="crm_id.city" t-out="crm_id.city"/>
                                                <t t-if="crm_id.state_id" t-out="crm_id.state_id.name"/>
                                                <t t-if="crm_id.zip" t-out="crm_id.zip"/>
                                            </p>
                                            <p class="p-0 m-0" t-if="crm_id.country_id" t-out="crm_id.country_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col">
                                            <strong>Company Name</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.partner_id" t-out="crm_id.partner_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <strong>Website</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.website" t-out="crm_id.website"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <strong>Sales Team</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.team_id" t-out="crm_id.team_id.name"/>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col">
                                            <strong>Tags</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-esc="', '.join(tag.name for tag in crm_id.tag_ids)"/>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col">
                                            <strong>Contact Name</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.contact_name" t-out="crm_id.contact_name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col">
                                            <strong>Job Position</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.function" t-out="crm_id.function"/>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col">
                                            <strong>Campaign</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.campaign_id" t-out="crm_id.campaign_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <strong>Medium</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.medium_id" t-out="crm_id.medium_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <strong>Source</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.source_id" t-out="crm_id.source_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <strong>Referred By</strong>
                                        </div>
                                        <div class="col">
                                            <p class="p-0 m-0" t-if="crm_id.referred" t-out="crm_id.referred"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


                <!--                <p t-out="crm_id.name"/>-->
                <!--                <p t-out="crm_id.expected_revenue"/>-->
                <!--                <p t-out="crm_id.probability"/>-->
                <!--                <p t-out="crm_id.partner_id.name"/>-->
                <!--                <p t-out="crm_id.user_id.name"/>-->
                <!--                <p t-out="crm_id.email_from"/>-->
                <!--                <p t-out="crm_id.date_deadline"/>-->
                <!--                <p t-out="crm_id.phone"/>-->
                <!--                <p t-out="crm_id.date_deadline"/>-->
                <!--                <p t-out="crm_id.priority"/>-->
                <!--                <p t-esc="', '.join(tag.name for tag in crm_id.tag_ids)"/>-->

            </t>
        </xpath>

    </template>
</odoo>